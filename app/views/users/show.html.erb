

<div class="container">  
<div class="row">  

<div class="col-md-3">
<div>
 <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>


<table class= "table w-100">
  <tr>
    <th>name</th>
    <td><strong><%= @user.name %></storng></td>
  </tr>
  <tr>
    <th>introduction</th>
    <td><strong><%= @user.introduction %></strong></td>
  </tr>
</table>
  
  <%= link_to edit_user_path(@user),class:"btn btn-outline-dark w-100" do %><i class="fa-solid fa-user-gear"></i>  <% end %>
</div>
<br>
 <h2><strong>New book</strong></h2>



 <%= form_with model: @book, local: true do |f| %>
  
  <br><div>Title</div>
  
 <%= f.text_field :title, class: "form-control w-80" %>
	
  <br><div>Opinion</div>
  <%= f.text_area :body, class: "form-control w-80" %>

	
  <br><div><%= f.submit 'Create Book', class: "btn btn-success " %></div>
 <% end %>

</div>
<div class="offset-md-1 col-md-8">
</div>

<div class="col-md-8">
 
<h1>Books</h1>

<table class="table w-100">
  <thead>
    <tr>
      <th style="width: 80px;"></th> 
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(@user) do %>
        <%= image_tag book.user.get_profile_image(80, 80) %><% end %></td>
         <td><%= link_to book.title, book_path(book)%></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
 
<%# グリッドシステムのためのdiv3つ %>
</div>  
</div>  
</div>
