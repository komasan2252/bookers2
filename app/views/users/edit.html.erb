<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h5>error</h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="top">
<h4>User info</h4>
<br>
<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label>
  <br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <br><br>
  <label for="inputImage">ProfileImage</label>
  <br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <br><br>
  <label for="inputIntroduction">Introduction</label>
  <br>
  <%= f.text_area :introduction, autofocus: true, id: "inputIntroduction", class: "resizable-textarea" %>
  <br><br>
  <%= f.submit "Update User",class: "btn btn-secondary" %>
<% end %>
</div>