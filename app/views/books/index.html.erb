

<%= render 'ten', book: @book %>

 
<h1>Books</h1>

<table class="table w-100">
  <thead>
    <tr>
      <th style="width: 80px;"></th> 
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
        <%= image_tag book.user.get_profile_image(80, 80)  %><% end %></td>
        <td><%= link_to book.title, book_path(book)%></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
</div>  
</div>  
</div>
