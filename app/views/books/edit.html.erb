<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <h4>error</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

Editing Book

<%= form_with model: @book, local: true do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %> 
  </div>

  <div>
    <%= f.label :Opinion %><br>
    <%= f.text_area :body %>  
  </div>

  <div>
    <%= f.submit "Update Book" %>
  </div>
<% end %>
<p>
  <%= link_to "Show", book_path(@book) %> |
  <%= link_to "Back", books_path %>
</p>




