<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <h4>error</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container">  
<div class="row">  

<div class="col-md-3">

 <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
   <%= link_to edit_user_path(current_user),class:"btn btn-outline-dark w-100" do %><i class="fa-solid fa-user-gear"></i>  <% end %>
 <table class= "table w-100">
 <tr>
   <th>name</th>
   <td><strong><%= current_user.name %></storng></td>
 </tr>
 <tr>
   <th>introduction</th>
   <td><strong><%= current_user.introduction %></strong></td>
 </tr>
</table>
<br>
 <h2><strong>New book</strong></h2>



 <%= form_with model: book, local: true do |f| %>
  
  <br><div>Title</div>
  
 <%= f.text_field :title, class: "form-control w-80" %>
	
  <br><div>Opinion</div>
  <%= f.text_area :body, class: "form-control w-80" %>

	
  <br><div><%= f.submit 'Create Book', class: "btn btn-success " %></div>
 <% end %>

</div>
<div class="offset-md-1 col-md-8">
